# ==============================================
# Supabase Configuration
# Get these from your Supabase Project Settings -> API
# ==============================================
SUPABASE_URL="https://your-project.supabase.co"
SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_KEY="your-service-key"

# ==============================================
# WeChat Configuration (微信开放平台)
# 扫码登录和H5登录需要配置
# ==============================================
WECHAT_APP_ID="wxXXXXXXXX"
WECHAT_APP_SECRET="your-wechat-app-secret"

# ==============================================
# Tencent Cloud SMS (腾讯云短信)
# https://console.cloud.tencent.com/smsv2
# ==============================================
TENCENT_SECRET_ID="your-secret-id"
TENCENT_SECRET_KEY="your-secret-key"
TENCENT_SMS_SDK_APP_ID="1400XXXXXX"
TENCENT_SMS_SIGN_NAME="小概率"
TENCENT_SMS_TEMPLATE_ID="1234567"

# ==============================================
# Baidu SEO & Analytics (百度相关配置)
# ==============================================
# 百度站长平台主动推送令牌 (从百度站长后台获取)
BAIDU_PUSH_TOKEN="your-baidu-push-token"
# 百度统计ID (从百度统计后台获取，格式如: abc123def456)
NUXT_PUBLIC_BAIDU_ANALYTICS_ID="your-baidu-analytics-id"

# ==============================================
# Public Config (公开配置)
# ==============================================
NUXT_PUBLIC_SITE_URL="https://mirauni.com"
